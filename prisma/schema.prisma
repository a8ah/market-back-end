// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String @unique
  description String?

  products Product[]
  @@map("brands")
}

model Category{
    id String @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name String @unique
    description String?

    products Product[]
    @@map("categories")
}

model Product{
    id String @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name String @unique
    description String?
    
    brands Brand[]
    categoryId String
    category Category @relation(fields: [categoryId],references: [id])
    @@map("products")

    
}
